{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": ["dom", "esnext"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "typeRoots": ["node_modules/@types"]
}
